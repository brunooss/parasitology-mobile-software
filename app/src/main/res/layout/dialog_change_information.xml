<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textViewDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" android:fontFamily="@font/futura_heavy"
        android:text="Aterar Nome" android:textColor="@color/colorTextPrimary"
        android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/editTextDialogChange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" android:backgroundTint="@color/colorWhite" android:ems="10"
        android:fontFamily="@font/futura_light_bt" android:inputType="textPersonName"
        android:text="Nome a ser alterado" android:textColor="@color/colorTextPrimary"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDialogTitle"/>
    <ImageView
        android:layout_width="wrap_content" android:layout_height="30dp"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/editTextDialogChange"
        app:srcCompat="@drawable/parasite_combat_white"/>
</androidx.constraintlayout.widget.ConstraintLayout>